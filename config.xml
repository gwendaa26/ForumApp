<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gwendaa26.forum" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Forum</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/screen/ios/icon.png" />
        <icon height="180" src="icons/icon-60@3x.png" width="180" />
        <icon height="120" src="icons/icon-60@2x.png" width="120" />
        <icon height="76" src="icons/icon-76.png" width="76" />
        <icon height="152" src="icons/icon-76@2x.png" width="152" />
        <icon height="40" src="icons/icon-40.png" width="40" />
        <icon height="80" src="icons/icon-40@2x.png" width="80" />
        <icon height="57" src="icons/icon.png" width="57" />
        <icon height="114" src="icons/icon@2x.png" width="114" />
        <icon height="72" src="icons/icon-72.png" width="72" />
        <icon height="144" src="icons/icon-72@2x.png" width="144" />
        <icon height="29" src="icons/icon-small.png" width="29" />
        <icon height="58" src="icons/icon-small@2x.png" width="58" />
        <icon height="50" src="icons/icon-50.png" width="50" />
        <icon height="100" src="icons/icon-50@2x.png" width="100" />
        <icon height="167" src="icons/icon-83.5@2x.png" width="167" />
    </platform>
    <feature name="IntentAndNavigationFilter">
        <param name="ios-package" value="CDVIntentAndNavigationFilter" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="*" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-native-keyboard" spec="^1.4.1">
        <variable name="LICENSE" value="TRIAL" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
